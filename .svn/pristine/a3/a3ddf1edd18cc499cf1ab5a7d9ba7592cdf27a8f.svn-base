package gui;

import java.awt.EventQueue;

/**
 * Runs PowerPaintGUI by instantiating and starting the PowerPaintGUI.
 * 
 * @author Qing Bai
 * @version Winter 2015
 */
public final class PowerPaintGUIMain {

    /**
     * Private constructor to prevent construction of instances.
     */
    private PowerPaintGUIMain() {
        // do nothing 
    }

    /**
     * The main method, invokes the PowerPaint GUI. Command line arguments are ignored.
     * 
     * @param theArgs Command line arguments.
     */
    public static void main(final String[] theArgs) {
        EventQueue.invokeLater(new Runnable() {
            @Override
            public void run() {
                new PowerPaintGUI().start();
            }
        });
    }
}
